%li.item-box
  =link_to item_path(item) do
    = image_tag "item_images/#{item.item_images[0].image}"
    .item-box-text
      .text-box
        %h4
          #{item.name}
      .price
        = number_to_currency(item.price, unit: "￥", strip_insignificant_zeros: true)
      .price-tax
        (税込)
      .nice
        = fa_icon "heart"
        %span
        #{item.likes.count}
